@model IEnumerable<tutorial.Models.Employee>
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
    </head>
    <body>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Department</th>
                </tr>
            </thead>
            @foreach(var employee in Model)
            {
        <tr>
            <td>@employee.ID</td>
            <td>@employee.Name</td>
            <td>@employee.Email</td>
            <td>@employee.Department</td>
        </tr>
            }

        </table>
    </body>
    </html>