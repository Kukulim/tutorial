@model Employee

    <div class="container">
        <form asp-controller="Home" asp-action="Create" method="post">
            <div class="col-md-4 text-center m-auto">
                <div class="form-group">
                    <label for="exampleInputPassword1">Name:</label>
                    <input asp-for="Name" name="Name" type="text" class="form-control" id="NameText">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Email address:</label>
                    <input asp-for="Email" name="email" type="email" class="form-control" id="EmailText">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Department:</label>
                    <select type="text" class="form-control" name="Department" id="DepartmentText" asp-items="Html.GetEnumSelectList<DepEnum>()">
                        <option value="">Please Select</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                     
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <button type="submit" class="btn btn-primary">Create</button>
            </div>

        </form>
    </div>